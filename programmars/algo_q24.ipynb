      "source": [
        "def solution(num):\n",
        "  cnt = 0\n",
        "  while num != 1:\n",
        "    if num%2 == 0:\n",
        "      num = num/2\n",
        "    else:\n",
        "      num = num*3 + 1\n",
        "    cnt += 1\n",
        "  if cnt >= 500:\n",
        "    return -1\n",
        "  return cnt\n",
        "\n",
        "print(solution(6))\n",
        "print(solution(16))\n",
        "print(solution(626331))\n",
        "print(solution(1))"
      ]
